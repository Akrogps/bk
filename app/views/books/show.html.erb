      <% if @book.description %>
        <div class="flex-content col-8" style="background-color: transparent;">
            <p><%=@book.description.html_safe%></p>
        </div>
      <% end %>
      <div class="flex-sidebar-place col-4">
        <div class="flex-info-place">
          <div class="info">
            <p id="info"><%=@book.unit_price%>â‚¬</p>
          </div>
        </div>
        <%= render 'shared/brunch_club' %>
