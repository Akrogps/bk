<div class="banner">
  <form action="/action_page.php" >
    <div class="custom-select" placeholder="All locations" >
      <select>
        <option value="Restaurant">Restaurant</option>
        <option value="Cantine">Cantine</option>
        <option value="Bar">Bar</option>
        <option value="Brunch">Brunch</option>
        <option value="Café">Café</option>
      </select>
    </div>
    <input class="close-to" type="address" placeholder="Close to ..." >
    <button type="submit" class="button">Go</button>
  </form>
</div>
<div class="container">
  <div class="recent">
    <h3> Recent locations</h3>
  </div>
  <div class="card-grid justify-content-center" >
    <% @places.each do |place| %>
      <div class="card-resto">
        <%= image_tag"restoimg.jpg", width:'320' %>
        <div class="card-resto-infos" style="text-decoration: none;">
          <h2><%= link_to place.title, place_path(place), class: "text-dark" %></h2>
        </div>
        <div class="card-resto-subtitle">
          <p><%= place.subtitle %></p>
        </div>
        <div class="card-resto-content">
          <p><%= truncate(place.address, :length => 120) %></p>
        </div>
        <div class="card-resto-subtitle">
          <p><%= place.subtitle %></p>
        </div>
      </div>
    <% end %>
  </div>
  <div class="button">
    <a><%= link_to "See more", places_path %></a>
  </div>
</div>
<div class="brunch-club">
  <h3>The Brunch Club</h3>
  <div class="brunch-club-img">
    <%= image_tag "images.jpeg" %>
  </div>
  <div class="button">
    <a href="#">See more</a>
  </div>
</div>
<%= render 'shared/newsletter' %>
<div class="events">
  <h3>Brussels' Kitchen's Events</h3>
  <div class="row images-events" id="images-events">
    <div class="flex-events-img1 col-7">
      <%= image_tag "images.jpeg" %>
    </div>
    <div class="flex-events-img2 col-5">
      <%= image_tag "images.jpeg" %>
    </div>
  </div>
  <div class="button">
    <a href="#">See more</a>
  </div>
</div>

